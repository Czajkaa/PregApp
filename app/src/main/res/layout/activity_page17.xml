<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page10_background"
    android:orientation="vertical"
    android:gravity="center|bottom"
    tools:context=".page_17">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginVertical="80dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/page17_image1"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:scaleType="fitXY"
            android:layout_marginBottom="20dp"
            android:src="@drawable/page17_image1" />

        <Button
            android:id="@+id/page17_button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_effect1"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/color1"
            android:textSize="18sp"
            android:text="@string/page17_text1" />

        <Button
            android:id="@+id/page17_button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_effect1"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/color1"
            android:textSize="18sp"
            android:text="@string/page17_text2" />

        <Button
            android:id="@+id/page17_button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_effect1"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/color1"
            android:textSize="18sp"
            android:text="@string/page17_text3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="3dp"
        android:background="@color/color4">

        <ImageButton
            android:id="@+id/page17_icon1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button_effect2"
            android:layout_marginHorizontal="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon1"/>

        <ImageButton
            android:id="@+id/page17_icon2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button_effect2"
            android:layout_marginHorizontal="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon2"/>

        <ImageButton
            android:id="@+id/page17_icon3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button_effect2"
            android:layout_marginHorizontal="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon3"/>

        <ImageButton
            android:id="@+id/page17_icon4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button_effect2"
            android:layout_marginHorizontal="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon4"/>

        <ImageButton
            android:id="@+id/page17_icon5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button_effect2"
            android:layout_marginHorizontal="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon5"/>

    </LinearLayout>
</LinearLayout>