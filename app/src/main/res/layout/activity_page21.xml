<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page10_background"
    android:orientation="vertical"
    android:gravity="center|bottom"
    tools:context=".page_21">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/page21_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="35dp"
            android:layout_marginBottom="100dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="@string/page21_text1"
            android:textColor="@color/color1"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/page21_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:fontFamily="@font/roboto"
                android:text="@string/page21_text2"
                android:textColor="@color/color6"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/page21_text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/color6"
                android:textSize="32sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/page21_text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text=":"
                android:textColor="@color/color6"
                android:textSize="32sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_marginVertical="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/page21_text5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:fontFamily="@font/roboto"
                android:text="2000"
                android:textColor="@color/color6"
                android:textSize="32sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/page21_text6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="@string/page21_text3"
                android:textColor="@color/color6"
                android:textSize="32sp"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <Button
            android:id="@+id/page21_button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_effect1"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="20dp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/color1"
            android:textSize="18sp"
            android:text="@string/page21_text4" />

        <Button
            android:id="@+id/page21_button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_effect1"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/color1"
            android:textSize="18sp"
            android:text="@string/page21_text5" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="3dp"
        android:background="@color/color4">

        <ImageButton
            android:id="@+id/page21_icon1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button_effect2"
            android:layout_marginHorizontal="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon1"/>

        <ImageButton
            android:id="@+id/page21_icon2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button_effect2"
            android:layout_marginHorizontal="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon2"/>

        <ImageButton
            android:id="@+id/page21_icon3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button_effect2"
            android:layout_marginHorizontal="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon3"/>

        <ImageButton
            android:id="@+id/page21_icon4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button_effect2"
            android:layout_marginHorizontal="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon4"/>

        <ImageButton
            android:id="@+id/page21_icon5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button_effect2"
            android:layout_marginHorizontal="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon5"/>

    </LinearLayout>
</LinearLayout>