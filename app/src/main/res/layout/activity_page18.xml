<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page10_background"
    android:orientation="vertical"
    android:gravity="center|bottom"
    tools:context=".page_18">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/page18_image1"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:scaleType="fitXY"
            android:layout_margin="5dp"
            android:src="@drawable/page18_image1" />

        <TextView
            android:id="@+id/page18_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="35dp"
            android:fontFamily="@font/roboto"
            android:text="@string/page18_text1"
            android:textColor="@color/color2"
            android:textSize="20sp" />

        <Button
            android:id="@+id/page18_button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_effect1"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/color1"
            android:textSize="18sp"
            android:text="@string/page18_text3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="3dp"
        android:background="@color/color4">

        <ImageButton
            android:id="@+id/page18_icon1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button_effect2"
            android:layout_marginHorizontal="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon1"/>

        <ImageButton
            android:id="@+id/page18_icon2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button_effect2"
            android:layout_marginHorizontal="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon2"/>

        <ImageButton
            android:id="@+id/page18_icon3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button_effect2"
            android:layout_marginHorizontal="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon3"/>

        <ImageButton
            android:id="@+id/page18_icon4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button_effect2"
            android:layout_marginHorizontal="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon4"/>

        <ImageButton
            android:id="@+id/page18_icon5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button_effect2"
            android:layout_marginHorizontal="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon5"/>

    </LinearLayout>
</LinearLayout>